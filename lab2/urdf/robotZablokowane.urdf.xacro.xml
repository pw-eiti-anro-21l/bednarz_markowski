<?xml version="1.0" ?>

<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro" >
	
	<xacro:property name="params" value="${load_yaml('parametry.yaml')}"/>

	<link name="baza">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<material name="blue">
				<color rgba="0 0 0.8 1"/>
			</material>
			<geometry>
				<cylinder length="0.5" radius="0.1"/>
			</geometry>
		</visual>
	</link>
	<link name="czlon1">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<material name="red">
				<color rgba="1 0 0 1"/>
			</material>
			<geometry>
				<cylinder length="${params['czlon1']['dlugosc']}" radius="0.1"/>
			</geometry>
		</visual>
	</link>
	<joint name="poloczenie-baza-czlon1" type="fixed">
		<origin xyz="${params['czlon1']['xyz']}" rpy="${params['czlon1']['rpy']}"/>
		<parent link="baza"/>
		<child link="czlon1" />

	</joint>
	<link name="czlon2">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<material name="red">
				<color rgba="1 0 0 1"/>
			</material>
			<geometry>
				<cylinder length="${params['czlon2']['dlugosc']}" radius="0.1"/>
			</geometry>
		</visual>
	</link>
	<joint name="poloczenie-czlon1-czlon2" type="fixed">
		<origin xyz="${params['czlon2']['xyz']}" rpy="${params['czlon2']['rpy']}"/>
		<parent link="czlon1"/>
		<child link="czlon2" />
	</joint>
	<link name="czlon3">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<material name="red">
				<color rgba="1 0 0 1"/>
			</material>
			<geometry>
				<cylinder length="${params['czlon3']['dlugosc']}" radius="0.1"/>
			</geometry>
		</visual>
	</link>
	<joint name="poloczenie-czlon2-czlon3" type="fixed">
		<origin xyz="${params['czlon3']['xyz']}" rpy="${params['czlon3']['rpy']}"/>
		<parent link="czlon2"/>
		<child link="czlon3" />
	</joint>
	<link name="koncowka">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<material name="blue">
				<color rgba="0 0 0.8 1"/>
			</material>
			<geometry>
				<box size= "0.01 0.01 0.01"/>
			</geometry>
		</visual>
	</link>
	<joint name="poloczenie-czlon3-koncowka" type="fixed">
		<origin xyz="0 0 0"/>
		<parent link="czlon3"/>
		<child link="koncowka" />
	</joint>
</robot>
