<?xml version="1.0" ?>

<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro" >
	
	<xacro:property name="hbaza" value="${0.2}"/>
	<xacro:property name="params" value="${load_yaml('parametry.yaml')}"/>

	<link name="baza">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<material name="blue">
				<color rgba="0 0 0.8 0.5"/>
			</material>
			<geometry>
				<box size= "0.1 0.1 ${hbaza}"/>
			</geometry>
		</visual>
	</link>
	<link name="czlon1">
		<visual>
			<origin xyz="${params['czlon1']['x']} 0 ${hbaza*0.5}" rpy="0 0 0"/>
			<material name="red">
				<color rgba="1 0 0 0.5"/>
			</material>
			<geometry>
				<cylinder length="${params['czlon1']['dlugosc']}" radius="0.1"/>
			</geometry>
		</visual>
	</link>
	<joint name="poloczenie-baza-czlon1" type="revolute">
		<origin xyz="${params['czlon1']['xyz']}" rpy="${params['czlon1']['rpy']}"/>
		<parent link="baza"/>
		<child link="czlon1" />
		<axis xyz="0 0 1"/>
		<limit upper="4" lower="-4" effort="10" velocity="2" />  

	</joint>
	<link name="czlon2">
		<visual>
			<origin xyz="${params['czlon2']['x']+0.5*params['czlon3']['x']} ${-params['czlon1']['dlugosc']} 0" rpy="0 0 0"/>
			<material name="red">
				<color rgba="1 0 0 0.5"/>
			</material>
			<geometry>
				<box size= "${params['czlon3']['x']} 0.1 0.1"/>
			</geometry>
		</visual>
	</link>
	<joint name="poloczenie-czlon1-czlon2" type="revolute">
		<origin xyz="${params['czlon2']['xyz']}" rpy="${params['czlon2']['rpy']}"/>
		<parent link="czlon1"/>
		<child link="czlon2" />
		<axis xyz="0 0 1"/>
		<limit upper="4" lower="-4" effort="10" velocity="2" />  
	</joint>
	<link name="czlon3">
		<visual>
			<origin xyz="${params['czlon2']['x']} ${-params['czlon1']['dlugosc']} 0" rpy="0 0 0"/>
			<material name="red">
				<color rgba="1 0 0 0.5"/>
			</material>
			<geometry>
				<cylinder length="${params['czlon3']['dlugosc']}" radius="0.1"/>
			</geometry>
		</visual>
	</link>
	<joint name="poloczenie-czlon2-czlon3" type="revolute">
		<origin xyz="${params['czlon3']['xyz']}" rpy="${params['czlon3']['rpy']}"/>
		<parent link="czlon2"/>
		<child link="czlon3" />
		<axis xyz="0 0 1"/>
		<limit upper="4" lower="-4" effort="10" velocity="2" />  
	</joint>
	<link name="koncowka">
		<visual>
			<origin xyz="${params['czlon2']['x']+0.1} ${-params['czlon1']['dlugosc']} 0" rpy="0 0 0"/>
			<material name="white">
				<color rgba="1 1 1 0.5"/>
			</material>
			<geometry>
				<box size= "0.25 0.1 0.1"/>
			</geometry>
		</visual>
	</link>
	<joint name="poloczenie-czlon3-koncowka" type="fixed">
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<parent link="czlon3"/>
		<child link="koncowka" />
		<axis xyz="0 0 1"/>
	</joint>
</robot>
